#
# Configuration template for the .../pppoe/node.tag/service-name
# parameter.
#
# If set, only connect to access concentrator advertizing this service name
# only.
#

type: txt

help: Connect only to access concentrators advertizing this service name.

syntax:expression: pattern $VAR(@) "^[a-zA-Z0-9]+$" ; "Service name must be composed of uppper and lower case letters or numbers only"

update:expression: "sudo sed -r -i 's/ -S [a-zA-Z0-9]+//' /etc/ppp/peers/pppoe$VAR(../@) ; \
	sudo sed -i 's+/usr/sbin/pppoe+/usr/sbin/pppoe -S $VAR(@)+' /etc/ppp/peers/pppoe$VAR(../@)"

delete:expression: "sudo sed -r -i 's/ -S [a-zA-Z0-9]+//' /etc/ppp/peers/pppoe$VAR(../@)"

