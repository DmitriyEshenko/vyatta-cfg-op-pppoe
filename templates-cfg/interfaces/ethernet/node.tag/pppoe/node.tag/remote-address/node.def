#
# Configuration template for the .../pppoe/node.tag/remote-address parameter
#
# Set the IPv4 address of the remote end of the PPPOE link.
#

type: ipv4

help: The IPv4 address of the remote end of the PPPOE link.

update:expression: "sudo sed -i '/^[0-9:]/d' /etc/ppp/peers/pppoe$VAR(../@) ; \
        sudo echo $VAR(../local-address/@):$VAR(@) >> /etc/ppp/peers/pppoe$VAR(../@)"

delete:expression: "sudo sed -i '/^[0-9:]/d' /etc/ppp/peers/pppoe$VAR(../@) ; \
	if [ -z \"$VAR(../local-address/@)\" ]; then \
  	      sudo echo $VAR(../local-address/@): >> /etc/ppp/peers/pppoe$VAR(../@) ; \
        fi"

